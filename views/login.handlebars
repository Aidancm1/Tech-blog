<div class="card flex-column">
    <h2 class="card-header">Please enter a username and password</h2>
    <form id="login-form" class="card-body"
        <div class="mb-4">
            <label for="username" class="form-label">Username</label>
            <input placeholder="=Enter username" type="username" class="form-control" id="username-login">
            <div id="usernameHelp" class="form-text">Your information is being sold as you type it in.</div>
        </div>

       <div-class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input placeholder="Enter password" type="password" class="form-control" id="password-login">
        <div id="passwordHelp" class="form-text">Password must be 8 characters long</div>
        </div>

        <div class="mb-4">
            <a href="/signup">Signup here</a>
        </div>

        <button type="submit" class="btn" id="login-btn">Log In</button>
        </form>
</div>
<script src="js/login.js"></script>